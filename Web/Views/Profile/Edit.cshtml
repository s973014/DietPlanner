@model Web.Controllers.EditProfileVm
@using Domain.Enums

<h2>Редактирование профиля</h2>

<form asp-action="Edit" method="post">
    <div class="mb-3 mt-3">
        <a class="btn btn-warning" href="@Url.Action("ChangePassword", "Profile")">
            Сменить пароль
        </a>
    </div>
    <div class="mb-3">
        <label class="form-label">Вес (кг)</label>
        <input type="number" step="0.1" name="Weight"
               class="form-control" value="@Model.Weight" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Рост (см)</label>
        <input type="number" step="0.1" name="Height"
               class="form-control" value="@Model.Height" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Уровень активности</label>
        <select name="ActivityLevel" class="form-select" required>
            <option value="">-- выберите --</option>
            @foreach (ActivityLevel al in Enum.GetValues(typeof(ActivityLevel)))
            {
                string display = al switch
                {
                    ActivityLevel.Low => "Низкий",
                    ActivityLevel.Medium => "Средний",
                    ActivityLevel.High => "Высокий",
                    _ => al.ToString()
                };
                <option value="@al" selected="@(Model.ActivityLevel == al)">
                    @display
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Цель</label>
        <select name="Goal" class="form-select" required>
            <option value="">-- выберите --</option>
            @foreach (GoalType g in Enum.GetValues(typeof(GoalType)))
            {
                string display = g switch
                {
                    GoalType.WeightLoss => "Похудение",
                    GoalType.Maintenance => "Поддержание веса",
                    GoalType.WeightGain => "Набор веса",
                    _ => g.ToString()
                };
                <option value="@g" selected="@(Model.Goal == g)">
                    @display
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Аллергии</label>
        @foreach (var a in Model.Allergies)
        {
            <div class="form-check">
                <input class="form-check-input"
                       type="checkbox"
                       name="SelectedAllergyIds"
                       value="@a.Id"
                       checked="@a.IsSelected" />
                <label class="form-check-label">@a.Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">
        Сохранить
    </button>
</form>
