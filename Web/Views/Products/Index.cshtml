@model IEnumerable<Domain.Entitites.Product>

@{
    ViewData["Title"] = "Продукты";
}

<h2>Продукты</h2>

<a class="btn btn-success mb-2" href="/Products/Create">Создать новый продукт</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Название</th>
            <th>Калории</th>
            <th>Белки</th>
            <th>Жиры</th>
            <th>Углеводы</th>
            <th>Аллергия</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.NutritionPer100g.Calories</td>
                <td>@p.NutritionPer100g.Proteins</td>
                <td>@p.NutritionPer100g.Fats</td>
                <td>@p.NutritionPer100g.Carbs</td>
                <td>@(p.Allergy != null ? p.Allergy.Name : "—")</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Products/Edit/@p.Id">Редактировать</a>
                    <a class="btn btn-danger btn-sm" href="/Products/Delete/@p.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
