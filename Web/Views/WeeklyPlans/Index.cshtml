@model IEnumerable<Domain.Entitites.WeeklyPlan>
@using Domain.Enums

@{
    ViewData["Title"] = "Шаблонные недельные планы";

    string[] weekDays =
    {
        "Понедельник","Вторник","Среда",
        "Четверг","Пятница","Суббота","Воскресенье"
    };

    var mealTypes = Enum.GetValues<MealType>();
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-4">
    ➕ Создать новый план
</a>
<a class="btn btn-secondary" href="/Dashboard">Назад</a>
@if (!Model.Any())
{
    <div class="alert alert-info">
        Пока нет ни одного шаблонного плана
    </div>
}
else
{
    @foreach (var plan in Model)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <strong>План</strong>
                    <span class="text-muted">
                        (создан @plan.CreatedAt.ToShortDateString())
                    </span>
                </div>

                <div>
                    <a asp-action="Edit"
                       asp-route-id="@plan.Id"
                       class="btn btn-sm btn-outline-primary">
                        ✏️ Изменить
                    </a>
                    <a asp-action="Delete"
                       asp-route-id="@plan.Id"
                       class="btn btn-sm btn-outline-danger">
                        🗑 Удалить
                    </a>
                </div>
            </div>

            <div class="card-body p-0">
                <table class="table table-bordered mb-0 text-center">
                    <thead class="table-light">
                        <tr>
                            <th>День</th>
                            @foreach (var mt in mealTypes)
                            {
                                <th>@mt</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @for (int day = 0; day < 7; day++)
                        {
                            <tr>
                                <td class="fw-bold">
                                    @weekDays[day]
                                </td>

                                @foreach (var mt in mealTypes)
                                {
                                    var meal = plan.DailyMeals
                                    .FirstOrDefault(dm =>
                                    dm.DayIndex == day &&
                                    dm.MealType == mt);

                                    <td>
                                        @if (meal != null)
                                        {
                                            <span class="badge bg-success">
                                                @meal.Meal.Name
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}
