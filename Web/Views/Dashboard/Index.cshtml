@model Web.Controllers.DashboardPlanVm

@{
    var userName = ViewData["UserName"] ?? "Пользователь";
    var role = ViewData["UserRole"] ?? "User";

    float? weight = ViewData["UserWeight"] as float?;
    float? height = ViewData["UserHeight"] as float?;
    Domain.Enums.ActivityLevel? activity = ViewData["UserActivityLevel"] as Domain.Enums.ActivityLevel?;
    Domain.Enums.GoalType? goal = ViewData["UserGoal"] as Domain.Enums.GoalType?;

    bool canSelectPlan = weight.HasValue && height.HasValue && activity.HasValue && goal.HasValue;

    var mealTypeNames = new Dictionary<string, string>
    {
        { "Breakfast", "Завтрак" },
        { "Lunch", "Обед" },
        { "Dinner", "Ужин" },
        { "Snack", "Перекус" }
    };

    var mealOrder = new List<string>
    {
        "Breakfast",
        "Lunch",
        "Dinner",
        "Snack"
    };
}

<h2>Добро пожаловать, @userName!</h2>

@if (role.ToString() == "Dietitian")
{
    <hr />
    <h3>Управление диетологом</h3>
    <div class="d-flex flex-column gap-2 mt-2">
        <a class="btn btn-outline-primary" href="/Products">Продукты</a>
        <a class="btn btn-outline-primary" href="/Meals">Блюда</a>
        <a class="btn btn-outline-primary" href="/Substitutions">Замены блюд</a>
        <a class="btn btn-outline-primary" href="/WeeklyPlans">Недельные планы</a>
    </div>
}
else
{
    <div class="mt-3 mb-4 d-flex flex-column gap-2">
        <a class="btn btn-primary" href="/Profile/Edit">Редактировать профиль</a>

        @if (canSelectPlan)
        {
            if (Model != null && Model.WeeklyPlanId != Guid.Empty)
            {
                <form id="cancel-plan-form" method="post" asp-action="CancelWeeklyPlan">
                    <button type="submit" class="btn btn-danger">
                        Отменить текущий недельный план
                    </button>
                </form>
            }
            else
            {
                <a class="btn btn-success" href="/MealPlan/Select">
                    Выбрать новый недельный план
                </a>
            }
        }
        else
        {
            <button class="btn btn-success" disabled title="Сначала заполните профиль">
                Выбрать новый недельный план
            </button>
        }
    </div>
}

<hr />

@if (Model != null)
{
    <div id="plan-container" class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@Model.DayName</h4>
            <span class="badge bg-primary">День @(Model.DayIndex + 1) / 7</span>
        </div>

        <div class="card-body">
            <ul class="list-group">
                @foreach (var meal in Model.Meals
                            .OrderBy(m => mealOrder.IndexOf(m.MealType)))
                {
                    <li class="list-group-item d-flex align-items-center
                                        @(meal.IsSubstituted ? "list-group-item-warning" : "")">

                        <input type="checkbox"
                               class="form-check-input me-3 meal-checkbox"
                               data-id="@meal.DailyMealId"
                               @(meal.IsEaten ? "checked" : "") />

                        <div>
                            <strong>@mealTypeNames.GetValueOrDefault(meal.MealType, meal.MealType)</strong><br />
                            @meal.MealName

                            @if (meal.IsSubstituted)
                            {
                                <span class="badge bg-warning text-dark ms-2">
                                    Заменено
                                </span>
                            }
                        </div>
                    </li>
                }
            </ul>
        </div>

        <div class="card-footer d-flex justify-content-between">
            @if (!Model.IsLastDay)
            {
                <button class="btn btn-primary"
                        onclick="goToDay(@(Model.DayIndex + 1))">
                    Следующий день →
                </button>
            }
            else
            {
                <button type="button"
                        class="btn btn-success"
                        onclick="finishPlan()">
                    Сформировать отчёт
                </button>
            }
        </div>
    </div>
}

<div class="d-flex flex-column gap-2 mt-4">
    <a class="btn btn-danger" href="/Dashboard/Logout">Выйти</a>
</div>

@section Scripts
{
    <script>
        document.addEventListener('change', function (e) {
            if (!e.target.classList.contains('meal-checkbox')) return;

            fetch('/Dashboard/ToggleMeal', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    dailyMealId: e.target.dataset.id,
                    isEaten: e.target.checked
                })
            });
        });

        function goToDay(day) {
            fetch(`/Dashboard?day=${day}`)
                .then(r => r.text())
                .then(html => {
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');

                    const newPlan = doc.querySelector('#plan-container');
                    document.querySelector('#plan-container')
                        .replaceWith(newPlan);
                });
        }

        function finishPlan() {
            fetch('/Dashboard/FinishPlan', {
                method: 'POST'
            })
            .then(r => r.text())
            .then(html => {
                document.querySelector('#plan-container').remove();
                document.body.insertAdjacentHTML('beforeend', html);
            });
        }
    </script>
}
