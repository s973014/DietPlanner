@model Domain.Entitites.Substitution

@{
    ViewData["Title"] = "Удалить замену";
}

<h2>Удалить замену блюда</h2>

<div class="alert alert-warning">
    Вы уверены, что хотите удалить замену:
    <br />
    <strong>@Model.OriginalMeal.Name → @Model.SubstituteMeal.Name</strong> ?
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a class="btn btn-secondary" asp-action="Index">Отмена</a>
</form>
